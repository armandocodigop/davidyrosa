---
interface Props {
	title: string;
}

const { title } = Astro.props;

//import '../styles/global.css';

import { useState } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import NavbarMenu from './NavbarMenu';

---

<!doctype html>
<html lang="en">
	<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Te invitamos a celebrar nuestro matrimonio y tambien a la fiesta en honor a la mamita de 'Santa Ccecilia'." />
	<meta name="keywords" content="matrimonio, boda, Pazña, David, Rosa, Santa Cecilia, Challapata" />
	<meta name="viewport" content="width=device-width" />
	<meta name="robots" content="index, follow" />
	<meta property="og:title" content="Matrimonio de David y Rosa en Pazña" />
	<meta property="og:description" content="Celebra con nosotros el matrimonio de David y Rosa en la Iglesia Santa Cecilia de Pazña" />
	<meta property="og:type" content="website" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
	</head>
	<body class="bg-gradient-to-b from-black to-blue-900 min-h-screen">
		<div class="fixed inset-0 pointer-events-none">
			{Array.from({ length: 200 }).map((_, i) => (
				<div
					data-key={i}
					class="absolute rounded-full"
					style={{
						width: Math.random() * 3 + 'px',
						height: Math.random() * 3 + 'px',
						top: Math.random() * 100 + 'vh',
						left: Math.random() * 100 + 'vw',
						backgroundColor: 'white',
						opacity: Math.random(),
						animation: `twinkle ${Math.random() * 3 + 2}s ease-in-out infinite`
					}}
				/>
			))}
		</div>
		<style>
			@keyframes twinkle {
				0%, 100% { opacity: 0.2; }
				50% { opacity: 1; }
			}
		</style>

	<nav class="fixed w-full bg-gradient-to-r from-blue-900 via-blue-500 to-blue-900 shadow-md z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
            {/* Logo y título */}
            <div class="flex items-center">
                <span class="ml-2 text-2xl font-bold text-white">David&Rosa</span>
            </div>

            {/* Enlaces para desktop */}
            <div class="hidden md:flex items-center space-x-4">
                <a href="/" class="text-2xl text-white hover:text-indigo-600">
                Inicio
                </a>
                <a href="/matrimonio" class="text-2xl text-white hover:text-indigo-600">
                Matrimonio
                </a>
                <a href="/programa" class="text-2xl text-white hover:text-indigo-600">
                Programa
                </a>
                <a href="/bloques" class="text-2xl text-white hover:text-indigo-600">
                Bloques
                </a>
                <a href="/grupos" class="text-2xl text-white hover:text-indigo-600">
                Grupos
                </a>
            </div>

            {/* Botón hamburguesa para móvil */}
            <div class="md:hidden">
                <NavbarMenu client:load />
            </div>
            </div>
        </div>
        </nav>
        <br>
        <br>
        <br>

		<slot />
	</body>
</html>
